{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@now/static"
    },
    {
      "src": "server.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/views/index.ejs"
    },
    {
      "src": "/form",
      "dest": "/views/form.ejs"
    }
  ],
  "env": {
    "DATABASE_URL": "/db/database.sqlite",
    "NODE_ENV": "production"
  }
}
